<%= form_for([@user, @tester], :remote => true, :html => { :class => "form-inline" }) do |f| %>
  <% if @tester.errors.any? %>
    <div class ="alert alert-error">
      <b><%= pluralize(@tester.errors.count, "error") %> caught: </b>
      <% @tester.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="field inline-field span2 pad">
      <%= f.select :platform, PLATFORM_TYPES %>
    </div>
    <div class="field inline-field span3 pad">
      <%= f.text_field :email, :placeholder => "Email", :class => "fullw" %>
    </div>
    <div class="field inline-field span4 pad">
      <%= f.text_field :udid, :placeholder => "UDID", :class => "fullw" %>
    </div>
    <% if @tester.new_record? %>
     <div class="actions inline-field span3">
      <%= button_tag(:type => 'submit', class: "btn btn-primary btn-large pull-right") do %>
       <i class="icon-plus-sign icon-white"></i> Submit
      <% end %>
     </div>
    <% else %>
     <div class="actions inline-field span3 pad">
      <%= button_tag(:type => 'submit', class: "btn btn-success") do %>
       <i class="icon-ok-sign icon-white"></i> Save
      <% end %>
     </div>
    <% end %>
  </div>
<% end %>