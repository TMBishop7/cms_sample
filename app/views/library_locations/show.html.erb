<body>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <%= link_to raw('<div class="icampuslive-logo">Live</div>'), users_path %>
          <div class="flash-top">
            <% flash.each do |name, msg| %>
              <div class ="alert alert-<%= name %>">
                <%= msg %>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <%= render 'shared/navbar' %>
    </div>
    <div class="container-fluid">
      <div class="row-fluid laywrap">
        <div class="span3 dashside">
          <div class="well sidebar-nav">
            <%= render 'shared/featuresMenu' %>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9 dashmain">
          <div class="box-model"> 
<!-- start -->
			<div class="box-model-header"><h1>Library</h1></div>           
			  <div class="box-model-content">
			    <div class="row-fluid">
			      <div class="span12">
			      	<div class="row-fluid show-library">	
						<div class="span3 lib-thumb"><img src="<%= @library_location.image_thumbnail_url %>" class="img-polaroid" alt="preview" /></div>
						<div class="span6 lib-info">
							<h4><%= @library_location.title %></h4>
							<p><%= @library_location.latitude %>, <%= @library_location.longitude %></p>
						</div>
						<div class="span3 lib-edit">
							<div class="current-actions-wrap">
			          			<div class="current-actions">
									<%= link_to raw('<i class="icon-edit"></i> Edit'), edit_center_library_location_path(@center, @library_location), :class => 'btn btn-large' %>
								</div>
							</div>
						</div>
					</div>
			      </div>
			    </div>
			    <!-- includes Hours -->
			    <div class="row-fluid">
			      <div class="span12">
			      	<div class="row-fluid show-lib-hc header-hc">
			      		<div class="span1"></div>
					    <div class="span3 tleft"><h5>Weekday</h5></div>
					    <div class="span5 tmiddle"><h5>Hours</h5></div>
					    <div class="span3"></div>
					</div>
					<%= render 'library_hours/hour' %>
			    	<div class="row-fluid show-lib-hc footer-hc">
					    <div class="span3"></div>
					    <div class="span6 hc-middle"></div>
					    <div class="span3 hc-controls">
					    	<div class="current-actions-wrap">
								<div class="current-actions">
								  <%= link_to raw('<i class="icon-time icon-white"></i> New Hours'), new_center_library_location_library_hour_path(@center, @library_location, @library_hour), :class => 'btn btn-small btn-primary' %>
								</div>
							</div>
					    </div>
					</div>
			      </div>
			    </div>
			    <!-- includes Contacts -->
			    <div class="row-fluid">
			      <div class="span12">
			      	<div class="row-fluid show-lib-hc header-hc">
			      		<div class="span1"></div>
					    <div class="span3 tleft"><h5>Contact</h5></div>
					    <div class="span2 tmiddle"><h5>Phone</h5></div>
					    <div class="span3 tmiddle"><h5>E-Mail</h5></div>
					    <div class="span3"></div>
					</div>
					<%= render 'library_contacts/contact' %>
			      	<div class="row-fluid show-lib-hc footer-hc">
					    <div class="span3"></div><div class="span6 hc-middle"></div>
					    <div class="span3 hc-controls">
					    	<div class="current-actions-wrap">
								<div class="current-actions">
								  <%= link_to raw('<i class="icon-user icon-white"></i> New Contact'), new_center_library_location_library_contact_path(@center, @library_location, @library_contact), :class => 'btn btn-small btn-primary' %>
								</div>
							</div>
					    </div>
					</div>
			      </div>
			    </div>

			    <div class="row-fluid">
			      <div class="span12 pagination-centered">
			        <%= link_to 'Back', center_library_locations_path  %>
			      </div>
			    </div>
			  </div>
			</div>
<!-- end -->
		</div>       
        </div><!--/span-->
      </div><!--/row-->
    </div><!--/.fluid-container-->
    <div class="container-fluid">
      <div class="row-fluid">
        <hr/>
        <footer>
          <p>&copy; iCampus 2012</p>
        </footer>
      </div>
    </div><!--/.fluid-container-->
</body>
