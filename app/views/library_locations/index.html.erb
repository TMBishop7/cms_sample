<body>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <%= link_to raw('<div class="icampuslive-logo">Live</div>'), users_path %>
          <div class="flash-top">
            <% flash.each do |name, msg| %>
              <div class ="alert alert-<%= name %>">
                <%= msg %>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <%= render 'shared/navbar' %>
    </div>
    <div class="container-fluid">
      <div class="row-fluid laywrap">
        <div class="span3 dashside">
          <div class="well sidebar-nav">
            <%= render 'shared/featuresMenu' %>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9 dashmain">
          <div class="box-model">           
            <div class="box-model-header"><h1>Library</h1></div>           
            <div class="box-model-content">
              <div class="row-fluid">
                <div class="span12 guide">
                  <div class="count">
                    <h3>Locations</h3>
                    <div id="count" class="feed-count"><%= @library_locations.count %></div>
                  </div>
                  <%= render "shared/mini_guide" %>
                </div>
              </div>
              <div class="row-fluid">
                <div class="span12">
                  <ul id="libsList" class="showList">
                    <%= render @library_locations %>
                  </ul>
                </div>
              </div>
              <div class="row-fluid new-lib">
                <div class="span12 pagination-centered">
                  <%= link_to 'New Library', new_center_library_location_path, :class => 'btn btn-primary' %>
                </div>
              </div>
            </div>          
          </div>       
        </div><!--/span-->
      </div><!--/row-->
    </div><!--/.fluid-container-->
    <div class="container-fluid">
      <div class="row-fluid">
        <hr/>
        <footer>
          <p>&copy; iCampus 2012</p>
        </footer>
      </div>
    </div><!--/.fluid-container-->
</body>

