<%= content_tag_for(:li, ios_main_icon, :class => "li-graphics") do %>
	<div class="thumbnail">
	  	<h4><%= ios_main_icon.size_type %></h4>
		<div class="graph-container">
			<%= image_tag ios_main_icon.icon_image.url %>
		</div>
	  	<div class="row-fluid">
  			<div class="current-actions">
		  	  <div class="btn-group">
		  	  <%= link_to "Edit", edit_user_ios_main_icon_path(@user, ios_main_icon), data: { toggle: "modal", target: "#ajax-modal" }, :remote => true, :class => 'btn btn-small' %>
		  	  <%= link_to "Delete", [@user, ios_main_icon], :confirm => 'Are you sure?', :method => :delete, :remote => true, :class => 'btn btn-small' %>
		  	  </div>
		  	</div>
		</div>
	</div>
<% end %>