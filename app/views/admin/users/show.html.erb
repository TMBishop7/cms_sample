<div class="span6">
  <div class="box-model dashmain">
    <div class="box-model-header"><h1>Showing User</h1></div>
    <div class="box-model-content"><br/>

      <div class="row-fluid">
        <div class="span6 bg1">

            <div class="row-fluid">
            	<div class="span12 pagination-centered">
          		  <img src="<%= @user.picture_url %>" class="img-polaroid profile-pic">
            	</div>
            </div>

            <div class="row-fluid">
              <div class="span12 profile-box-actions pagination-centered">
                <div class="btn-group">
                  <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_admin_user_path(@user), :class => 'btn' %>
                  <%= link_to raw('<i class="icon-trash"></i> Delete'), admin_user_path(@user), :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %>
                </div>
              </div>
            </div>

        </div>
        <div class="span6 bg1 pad1">

          <div class="row-fluid">
      			<div class="span12 profile-box">
      				<div class="user-profile-label">user</div>
      				<h2 class="user-profile-name"><%= @user.name %></h2>
      			</div>
          </div>

          <div class="row-fluid">
      			<div class="span12 profile-box">
      				<div class="user-profile-label">email</div>
      				<h5 class="user-profile-attr"><%= @user.email %></h5>
      			</div>
          </div>

          <div class="row-fluid">
      			<div class="span12 profile-box">
      				<div class="user-profile-label">status</div>
      				<h5 class="user-profile-attr"><%= @user.app_status %></h5>
      			</div>
          </div>

        </div>
      </div>  

      <br/><br/><br/>
      <div class="row-fluid new-lib">
        <div class="span12 pagination-centered">
          <%= link_to 'Back', admin_path %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="span6">
  <div class="box-model dashmain">
    <div class="box-model-header"><h1><%= @user.name %> Checklist</h1></div>    
    <div class="box-model-content">
      <div class="row-fluid">
        <div id="checklistSwitch" class="span12 chck">
          <%= render 'shared/user_features' %>
        </div>
      </div>
    </div>
  </div>
</div>