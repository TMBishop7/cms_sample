<div class="span3">
  <div class="box-model dashmain">
  	<div class="box-model-header"><h1>Manage</h1></div>
  	<div class="box-model-content">
	  <div class="row-fluid pagination-centered">
		<%= link_to raw('<i class="icon-plus-sign icon-white"></i> New User'), new_admin_user_path, :class => 'btn btn-large btn-primary' %>
	  </div>
	</div>
  </div>
</div>
<div class="span9">
  <div class="box-model dashmain">

	<div class="box-model-header"><h1>Schools</h1></div>
	<div class="box-model-content">
	  <div class="row-fluid">
	  	<div class="admin-titles-wrap">
	  	  <div class="row-fluid">
		    <div class="span admin1"></div>
		    <div class="span admin2"><h5 class="leftlabel">School</h5></div>
		    <div class="span admin3"><h5 class="midlabel">App Status</h5></div>
		    <div class="span admin4"><h5 class="midlabel">Last Update</h5></div>
		    <div class="span admin5"><h5 class="rightlabel">Show - Edit - Delete</h5></div>
		  </div>
		</div>
	  </div>
	  <div class="row-fluid">
		<div class="admin-wrap">
		  <ul class="showList">
			<% @users.each do |user| %>
			  <li>
				<div class="row-fluid">
					<div class="span admin1 admin-thumb"><img src="<%= user.picture_url %>" class="admin-thumbnail" alt="preview" /></div>
					<div class="span admin2 list-left">
				  		<h2 class="admin"><%= user.name %></h2>
				  	</div>
				  	<div class="span admin3"><p class="admin-status"><%= user.app_status %></p></div>
				  	<div class="span admin4"><p class="admin-updates"><%= Time.now.strftime("%m/%d/%y at %I:%M%p") %></p></div> <!-- $a = "Tues,Wed,etc" -->
				  	<div class="span admin5 list-controls">
				  		<div class="current-actions-wrap">
				  		  <div class="current-actions">
						  	<div class="btn-group">
						  	  <%= link_to raw('<i class="icon-eye-open"></i>'), admin_user_path(user), :class => 'btn' %>
				      	      <%= link_to raw('<i class="icon-edit"></i>'), edit_admin_user_path(user), :class => 'btn' %>
				      	      <%= link_to raw('<i class="icon-trash"></i>'), admin_user_path(user), :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %>
						  	</div>
						  </div>
						</div>
					</div>
				</div>
			  </li>
			<% end %>
		  </ul>
		</div>
	  </div>
	</div>

  </div>
</div>