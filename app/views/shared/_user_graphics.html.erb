<div class="row-fluid">
    <div class="span12">
      <ul class="nav nav-tabs home-tabs">
        <li>
          <%= link_to "Features", {:action => "tab_feat"}, :remote => true %>
        </li>
        <li class="active">
          <%= link_to "Graphics", {:action => "tab_graph"}, :remote => true %>
        </li>
        <li>
          <%= link_to "Distribution", {:action => "tab_dist"}, :remote => true %>
        </li>
        <li>
          <%= link_to "Release", {:action => "tab_rel"}, :remote => true %>
        </li>
      </ul>
    </div>
</div>
<div class="row-fluid chcklst">
  <div class="span12 checklist">
  	<div class="row-fluid checklist-row checklist-row-header">
  		<div class="span12 checklist-header"><h4>iOS</h4></div>
  	</div>
      <div class="row-fluid checklist-row">
        <div class="span2 checklist-status">
        	<% if @user.ios_main_icons.count == 5 %>
        		<span class="badge badge-info">&#x2713;</span>
        	<% else %>
        		<% if @user.ios_main_icons.count == 0 %>
        			<span class="badge">0</span>
        		<% else %>
        			<span class="badge badge-warning"><%= @user.ios_main_icons.count %></span>
        		<% end %>
        	<% end %>
        </div>
        <div class="span10"><h4>Main Icons</h4></div>
      </div>
      <div class="row-fluid checklist-row">
        <div class="span2 checklist-status">
        	<% if @user.ios_feature_icons.count >= 18 %>
        		<span class="badge badge-info"><%= @user.ios_feature_icons.count %></span>
        	<% else %>
        		<% if @user.ios_feature_icons.count == 0 %>
        			<span class="badge">0</span>
        		<% else %>
        			<span class="badge badge-warning"><%= @user.ios_feature_icons.count %></span>
        		<% end %>
        	<% end %>
        </div>
        <div class="span10"><h4>Feature Icons</h4></div>
      </div>
      <div class="row-fluid checklist-row">
        <div class="span2 checklist-status">
        	<% if @user.ios_backgrounds.count == 4 %>
        		<span class="badge badge-info">&#x2713;</span>
        	<% else %>
        		<% if @user.ios_backgrounds.count == 0 %>
        			<span class="badge">0</span>
        		<% else %>
        			<span class="badge badge-warning"><%= @user.ios_backgrounds.count %></span>
        		<% end %>
        	<% end %>
        </div>
        <div class="span10"><h4>Backgrounds</h4></div>
      </div>
      <div class="row-fluid checklist-row">
        <div class="span2 checklist-status">
        	<% if @user.ios_topbar != nil %>
        		<span class="badge badge-info">&#x2713;</span>
        	<% else %>
        		<span class="badge">0</span>
        	<% end %>
        </div>
        <div class="span10"><h4>Top Bar Color</h4></div>
      </div>
      <div class="row-fluid checklist-row checklist-row-header">
