<div class="navbar">
  <div class="navbar-inner">
    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <a class="brand" href="#">Dashboard</a>
    <div class="nav-collapse collapse">
      <% if current_user %>
        <ul class="nav pull-right logg">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.name %> &nbsp;<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Change Password", change_password_user_path(@user) %></li>
              <li><%= link_to raw('<i class="icon-user icon-blue"></i> Log Out'), logout_path %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <p class="navbar-text pull-right logg">
          <%= link_to "Log In", login_path, :class => 'navbar-link' %>
        </p>
      <% end %>
      <ul class="nav">
        <li class="<%= get_controller == 0 ? 'active': '' %>"><%= link_to "Home", root_url %></li>
        <li class="<%= get_controller == 1 ? 'active': '' %>"><%= link_to "Features", [@user, :newsfeeds] %></li>
        <li class="<%= get_controller == 2 ? 'active': '' %>"><%= link_to "Graphics", [@user, :ios_main_icons] %></li>
        <li class="<%= get_controller == 3 ? 'active': '' %>"><%= link_to "Distribution", user_apple_developer_path(@user) %></li>
        <li class="<%= get_controller == 4 ? 'active': '' %>"><%= link_to "Release", user_project_info_page_path(@user) %></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
