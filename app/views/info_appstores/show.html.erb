<div class="box-model-header"><h1>App Store Information</h1></div>
<div class="box-model-content">
  <div class="row-fluid">
    <div class="span12 guide">
      <div class="count">
        <h3>Ready</h3>
        <div id="count" class="feed-count">&#x2713;</div>
      </div>
      <%= render "shared/mini_guide" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <h6>Naming</h6>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span8">
      <div class="nonfeed-block">
        <div><h5>Institution:</h5> <%= @info_appstore.institution_name %></div>
        <div><h5>Short Name:</h5> <%= @info_appstore.app_short_name %></div>
        <div><h5>Long Name:</h5> <%= @info_appstore.app_long_name %></div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <h6>Description</h6>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="nonfeed-block">
        <div>    
    		<h5><%= @info_appstore.app_short_name %> Description:</h5>
        <p><%= @info_appstore.app_description %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">

  		<div class="current-actions-wrap">
  		  <div class="current-actions">
  		  	<div class="btn-group">
  		  	  <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_user_info_appstore_path, :class => 'btn' %>
  			  <%= link_to raw('<i class="icon-trash"></i> Delete'), user_info_appstore_path(@user), :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %>
  		  	</div>
  		  </div>
  		</div>  

    </div>
  </div>
  <br/>
  <div class="row-fluid">
    <div class="span12">
    </div>
  </div>
</div>
