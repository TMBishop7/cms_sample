<%= content_tag_for(:div, emergency_phone, :style => 'display:none;') do %>
	<div class="pIcon">
		<img src="/img/phone-marker.png" alt="icon" />
	</div>
	<div class="row-fluid">
		<div class="span12">
	  		<h4><%= emergency_phone.location_name %></h4>
	  	</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<div class="coords"><%= emergency_phone.latitude %>, <%= emergency_phone.longitude %></div>
		</div>
	</div>
	<div class="row-fluid">
	  	<div class="span12">
	  		<div class="btn-group">
	  		<%= link_to raw('<i class="icon-edit"></i> Edit'), edit_center_emergency_phone_path(@center, emergency_phone), :remote => true, :class => 'btn btn-small', :id => "ed_#{emergency_phone.id}", :onclick => "setTrue();" %>
	  		<%= link_to raw('<i class="icon-trash"></i> Delete'), [@center, emergency_phone], :confirm => 'Are you sure?', :method => :delete, :remote => true, :class => 'btn btn-small' %>
	  		</div>
		</div>
	</div>
	<div id="inner_<%= dom_id(emergency_phone) %>" class="row-fluid listItemInner"></div>
<% end %>