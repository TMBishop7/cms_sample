<%= content_tag_for(:li, android_background, :class => "span3 li-backgrounds") do %>
	<div class="thumbnail">
	  	<h4><%= android_background.background_type_size %></h4>
		<div class="iback-container">
			<%= image_tag android_background.image.url %>
		</div>
	  	<div class="row-fluid">
  			<div class="current-actions">
		  	  <div class="btn-group">
		  	  <%= link_to "Edit", edit_user_android_background_path(@user, android_background), data: { toggle: "modal", target: "#ajax-modal" }, :remote => true, :class => 'btn btn-small' %>
		  	  <%= link_to "Delete", [@user, android_background], :confirm => 'Are you sure?', :method => :delete, :remote => true, :class => 'btn btn-small' %>
		  	  </div>
		  	</div>
		</div>
	</div>
<% end %>