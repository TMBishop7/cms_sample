<%= content_tag_for :li, emergency_contact do %>
	<div class="row-fluid">
		<div class="span1"><div class="cms-icon cms-shield"></div></div>
		<div class="span8 list-left">
	  		<h4><%= emergency_contact.name %></h4>
	  		<p><%= emergency_contact.phone %> | <i><%= emergency_contact.link_url %></i></p>
	  	</div>
	  	<div class="span3 list-controls">
	  		<div class="current-actions-wrap">
	  			<div class="current-actions">
			  	<div class="btn-group">
			  	<%= link_to raw('<i class="icon-edit"></i> Edit'), edit_center_emergency_contact_path(@center, emergency_contact), :remote => true, :class => 'btn btn-small' %>
			  	<%= link_to raw('<i class="icon-trash"></i> Delete'), [@center, emergency_contact], :confirm => 'Are you sure?', :method => :delete, :remote => true, :class => 'btn btn-small' %>
			  	</div>
			  	</div>
			</div>
		</div>
	</div>
	<div id="inner_<%= dom_id(emergency_contact) %>" class="row-fluid listItemInner"></div>
<% end %>