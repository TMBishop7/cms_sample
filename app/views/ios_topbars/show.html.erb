<div class="box-model-header"><h1>iOS Top Bar</h1></div>   
<div class="box-model-content">
  <div class="row-fluid">
    <div class="span12 guide">
      <div class="count">
        <h3>Ready</h3>
        <div id="count" class="feed-count">&#x2713;</div>
      </div>
      <%= render "shared/mini_guide" %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="tb-contain">
        <div id="topbar-preview" style="background-color:<%= @ios_topbar.rgb_color %>;">
          <div id="topbar-gradient"><h4 class="topbar-label"><%= @ios_topbar.rgb_color %></h4></div>
        </div>
      </div>
    </div>
  </div>
  <br/>
  <div class="row-fluid">
    <div class="span12">
      <div class="center-btns">
        <div class="btn-group">
        	<%= link_to raw('<i class="icon-edit"></i> Edit'), edit_user_ios_topbar_path, :class => 'btn' %>
          <%= link_to raw('<i class="icon-trash"></i> Delete'), user_ios_topbar_path(@user), :confirm => 'Are you sure?', :method => :delete, :class => 'btn' %>
        </div>
      </div>
    </div>
  </div>
</div>