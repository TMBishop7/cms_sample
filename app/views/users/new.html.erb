<div class="box-model-header"><h1>New User</h1></div>						
	<div class="box-model-content">
		<div class="row-fluid">
			<div class="span12">

				<%= form_for @user do |f| %>
				  <% if @user.errors.any? %>
				    <div class="error_messages">
				      <h2>Form is invalid</h2>
				      <ul>
				        <% @user.errors.full_messages.each do |message| %>
				          <li><%= message %></li>
				        <% end %>
				      </ul>
				    </div>
				  <% end %>

				  <div class="field">
				    <div class="row-fluid">
				      <div class="span6 offset3">
				        <%= f.text_field :name, :placeholder => "Username" %>
				      </div>
				    </div>
				  </div>
				  <br />
				  <div class="field">
				    <div class="row-fluid">
				      <div class="span6 offset3">
				        <%= f.text_field :email, :placeholder => "Email" %>
				      </div>
				    </div>
				  </div>
				  <br />
				  <div class="field">
				    <div class="row-fluid">
				      <div class="span6 offset3">
				        <%= f.password_field :password, :placeholder => "Password" %>
				      </div>
				    </div>
				  </div>
				  <br />
				  <div class="field">
				    <div class="row-fluid">
				      <div class="span6 offset3">
				        <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %>
				      </div>
				    </div>
				  </div>
				  <br />
				  <div class="actions">
				    <div class="row-fluid">
				      <div class="span6 offset3">
				        <%= f.submit "Create User", :class => 'btn btn-primary'  %>
				      </div>
				    </div>
				  </div>
				<% end %>

			</div>
		</div>
	</div>
</div>