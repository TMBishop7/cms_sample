<%= form_for([@user, @ios_feature_icon], :remote => true, :html => { :multipart => true, :class => "form-inline" }) do |f| %>
  <% if @ios_feature_icon.errors.any? %>
    <div class ="alert alert-error">
      <b><%= pluralize(@ios_feature_icon.errors.count, "error") %> caught: </b>
      <% @ios_feature_icon.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="field inline-field span3 pad">
      <%= f.select :feature_name, ALL_FEATURES %>
    </div>
    <div class="field inline-field span3 pad">
      <%= f.select :icon_size, FEATURE_SIZES %>
    </div>
    <div class="field inline-field span3 pad">
      <span class="btn btn-file fileinput-button">
        <i class="icon-file icon-blue"></i>
        <span>Select...</span>
        <%= f.file_field :icon_image, :class => "file-prev" %>
      </span>
      <div class="show-prev"></div>
    </div>
    <% if @ios_feature_icon.new_record? %>
     <div class="actions inline-field span3">
      <%= button_tag(:type => 'submit', class: "btn btn-primary btn-large pull-right") do %>
       <i class="icon-plus-sign icon-white"></i> Submit
      <% end %>
     </div>
    <% else %>
     <div class="actions inline-field span3 pad">
      <%= button_tag(:type => 'submit', class: "btn btn-success") do %>
       <i class="icon-ok-sign icon-white"></i> Save
      <% end %>
     </div>
    <% end %>
  </div>
<% end %>