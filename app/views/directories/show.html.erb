<div class="box-model-header"><h1>Directory</h1></div>                       
<div class="box-model-content">
    <div class="row-fluid">
        <div class="span12 guide">
            <div class="count">
                <h3>Ready</h3>
                <div id="count" class="feed-count">&#x2713;</div>
            </div>
            <%= render "shared/mini_guide" %>
        </div>
    </div>
    <div class="row-fluid">
    </div>
    <div class="row-fluid">
      <div id="wrap-directory" class="span12">
            
        <div>
            <div class="row-fluid">
                <div class="span12">
                    <h6>Access</h6>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="nonfeed-block">
                        <div><h5>LDAP Server:</h5> <%= @directory.ldap_server %></div>
                        <div><h5>LDAP Port:</h5> <%= @directory.ldap_port %></div>
                        <div><h5>LDAP Base:</h5> <%= @directory.ldap_base %></div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <h6>Schema</h6>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="nonfeed-block">
                        <div><h5>First Name:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.first_name %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Last Name:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.last_name %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Full Name:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.full_name %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Title:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.title %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Department:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.department %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Affiliation:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.affiliation %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Address:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.address %><i class="icon-chevron-right icon-grey"></i></div>
                    </div>
                </div>
                <div class="span6">
                    <div class="nonfeed-block">
                        <div><h5>Home Phone:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.home_phone %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Email:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.email %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Room:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.room %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Unique ID:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.unique_id %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Telephone:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.telephone %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Fax:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.fax %><i class="icon-chevron-right icon-grey"></i></div>
                        <div><h5>Office:</h5> <i class="icon-chevron-left icon-grey"></i><%= @directory.office %><i class="icon-chevron-right icon-grey"></i></div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <br/>
                    <div class="btn-group">
                    <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_user_directory_path, :class => 'btn' %>
                    <%= link_to raw('<i class="icon-trash"></i> Delete'), user_directory_path(@user), confirm: 'Are you sure?', method: :delete, :class => 'btn' %>
                    </div>
                    <br/>
                </div>
            </div>
        </div>

      </div>
    </div>
</div>