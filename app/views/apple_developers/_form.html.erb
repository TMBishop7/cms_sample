<%= form_for(@apple_developer, :url => user_apple_developer_path(@user), :html => { :class => "form-inline" }) do |f| %>
  <% if @apple_developer.errors.any? %>
    <div class ="alert alert-error">
      <b><%= pluralize(@apple_developer.errors.count, "error") %> caught: </b>
      <% @apple_developer.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="field inline-field span4 pad">
      <%= f.text_field :username, :placeholder => "Account Username", :class => "fullw" %>
    </div>
    <div class="field inline-field span4 pad">
      <%= f.text_field :pass, :placeholder => "Account Password", :class => "fullw" %>
    </div>
    <% if @apple_developer.new_record? %>
     <div class="actions inline-field span4">
      <%= button_tag(:type => 'submit', class: "btn btn-primary btn-large pull-right") do %>
       <i class="icon-plus-sign icon-white"></i> Submit
      <% end %>
     </div>
    <% else %>
     <div class="actions inline-field span4">
      <%= button_tag(:type => 'submit', class: "btn btn-success btn-large pull-right") do %>
       <i class="icon-ok-sign icon-white"></i> Save
      <% end %>
     </div>
    <% end %>
  </div>
<% end %>
