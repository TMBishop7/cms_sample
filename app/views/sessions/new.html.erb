<div class="login-container">
	<div class="login-header">
		<h2>Login</h2>
	</div>
	<%= form_tag sessions_path do %>
		<div class="row-fluid">
		   <div class="field">
		   	  <%= label :name, "Username", :class => 'login-label' %>
		      <%= text_field_tag :name, params[:name] %>
		   </div>
	  	</div>
	  	<br />
	  	<div class="row-fluid">
		   <div class="field">
		   	  <%= label :password, "Password", :class => 'login-label' %>
			  <%= password_field_tag :password %>
		   </div>
		</div>
	  	<br />
	  	<div class="row-fluid">
	  	   <div class="forgot">
	  	   	  <%= link_to "Forgot Password?", new_password_reset_path %>
	  	   </div>
		   <div class="actions">
			  <%= submit_tag "Sign In", :class => 'btn btn-primary pull-right' %>
		   </div>
	  	</div>
	<% end %>
</div>